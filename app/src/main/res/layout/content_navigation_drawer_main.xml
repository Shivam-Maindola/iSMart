<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Navigation_drawer_main"
    android:background="@drawable/b2"
    android:orientation="vertical">


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_margin="12dp" />

    <LinearLayout
        android:id="@+id/SliderDots"
        android:layout_below="@+id/viewPager"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ImageView
                android:id="@+id/main_Mutual_Fund"
                android:layout_width="260dp"
                android:layout_gravity="center"
                android:layout_height="180dp"
                android:background="@drawable/sharemarket123"
                android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/main_Share_market"
                    android:layout_width="300dp"
                    android:layout_gravity="center"
                    android:layout_height="180dp"
                    android:background="@drawable/mutualfund"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/main_Cryptocurrency"
                    android:layout_width="260dp"
                    android:layout_gravity="center"
                    android:layout_height="180dp"
                    android:background="@drawable/cryptocurrency"
                    android:layout_margin="10dp"/>

            </LinearLayout> </ScrollView>


</LinearLayout>