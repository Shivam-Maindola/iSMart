<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background">


    <include
        layout="@layout/toolbar"
        android:id="@+id/main_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="525dp"
        android:layout_marginTop="54dp"
        android:clipToPadding="false"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                app:cardElevation="1dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/main_Mutual_Fund"
                    android:layout_width="match_parent"
                    android:layout_height="159dp"
                    android:background="#a2a7a4"
                    android:src="@drawable/mutualfunds" />

            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="1dp"
                    app:cardUseCompatPadding="true">

                    <ImageView
                        android:id="@+id/main_Share_market"
                        android:layout_width="175dp"
                        android:layout_height="150dp"
                        android:background="#0e014d"
                        android:src="@drawable/sharemarket" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="1dp"
                    app:cardUseCompatPadding="true">

                    <ImageView
                        android:id="@+id/main_Cryptocurrency"
                        android:layout_width="180dp"
                        android:layout_height="150dp"
                        android:background="#fff"
                        android:src="@drawable/cryptocurrency" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                app:cardElevation="1dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/main_Real_Estate"
                    android:layout_width="match_parent"
                    android:layout_height="159dp"
                    android:background="#fff"
                    android:src="@drawable/realestate" />

            </android.support.v7.widget.CardView>
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>